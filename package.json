{
  "name": "handy-app",
  "private": true,
  "version": "0.7.7",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "bun ./scripts/tauri-dev.mjs info",
    "tauri:dev:debug": "bun ./scripts/tauri-dev.mjs debug",
    "tauri:dev:verbose": "bun ./scripts/tauri-dev.mjs verbose",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write . && cd src-tauri && cargo fmt",
    "format:check": "prettier --check . && cd src-tauri && cargo fmt -- --check",
    "format:frontend": "prettier --write .",
    "format:backend": "cd src-tauri && cargo fmt",
    "logs": "tail -f ~/Library/Logs/com.pais.codictate/codictate*.log",
    "logs:grep": "grep -E \"$1\" ~/Library/Logs/com.pais.codictate/codictate*.log | tail -50",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test": "vitest run",
    "test:watch": "vitest",
    "check:translations": "bun scripts/check-translations.ts"
  },
  "dependencies": {
    "@fontsource-variable/noto-sans": "^5.2.10",
    "@fontsource-variable/outfit": "^5.2.8",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@tailwindcss/vite": "^4.1.16",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-autostart": "~2.5.1",
    "@tauri-apps/plugin-clipboard-manager": "~2.3.2",
    "@tauri-apps/plugin-dialog": "~2",
    "@tauri-apps/plugin-fs": "~2.4.5",
    "@tauri-apps/plugin-global-shortcut": "~2.3.1",
    "@tauri-apps/plugin-opener": "^2.5.3",
    "@tauri-apps/plugin-os": "~2.3.2",
    "@tauri-apps/plugin-process": "~2.3.1",
    "@tauri-apps/plugin-sql": "~2.3.1",
    "@tauri-apps/plugin-store": "~2.4.2",
    "@tauri-apps/plugin-updater": "^2.10.0",
    "canvas-confetti": "^1.9.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "i18next": "^25.7.2",
    "immer": "^11.1.3",
    "lucide-react": "^0.562.0",
    "radix-ui": "^1.4.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^16.4.1",
    "react-select": "^5.8.0",
    "react-virtuoso": "^4.18.1",
    "shadcn": "^3.6.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.16",
    "tailwindcss-animate": "^1.0.7",
    "tauri-plugin-macos-permissions-api": "2.3.0",
    "tw-animate-css": "^1.4.0",
    "zod": "^3.25.76",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@sentry/vite-plugin": "4.3.0",
    "@playwright/test": "^1.58.0",
    "@tauri-apps/cli": "^2.10.0",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^24.9.1",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@types/react-select": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.39.1",
    "eslint-plugin-i18next": "^6.1.3",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.6.2",
    "typescript": "~5.6.3",
    "vite": "^6.4.1",
    "vitest": "^4.0.18"
  }
}
